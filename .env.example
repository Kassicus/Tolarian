# Knowledge Base Application Environment Variables
# Copy this file to .env.local for local development
# For production, set these in your Vercel dashboard

# Flask Configuration
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-change-in-production

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_ANON_KEY=your-anon-public-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Database Configuration (Direct PostgreSQL connection for migrations)
# Get this from Supabase project settings > Database
DATABASE_URL=postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres

# Local Development (optional)
# Set this to use local Supabase instance
# LOCAL_SUPABASE=true

# Email Configuration (optional, for magic links)
# SMTP_HOST=smtp.sendgrid.net
# SMTP_PORT=587
# SMTP_USER=apikey
# SMTP_PASS=your-sendgrid-api-key
# SMTP_FROM=noreply@yourdomain.com

# Application Settings (optional)
# LOG_LEVEL=INFO
# ITEMS_PER_PAGE=20
# SEARCH_RESULTS_PER_PAGE=15

# Feature Flags (optional)
# ENABLE_API=true
# ENABLE_VERSIONING=true
# ENABLE_EXPORTS=true
# ENABLE_SOCIAL_AUTH=true

# Vercel KV Storage (production only, optional)
# KV_REST_API_URL=your-kv-url
# KV_REST_API_TOKEN=your-kv-token